{
    "manifest_version": 2,
    "name": "Neon New Tab",
    "description": "Overrides new tab page with a neon clock and temperature display",
    "version": "0.0.2",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "geolocation"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "browser_action": {
        "default_icon": "images/icon48.png"
    }
}